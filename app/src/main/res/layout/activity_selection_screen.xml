<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/symptomSelectionRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:padding="20dp"
    tools:context=".SelectionScreenActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What are you feeling?"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="#0000FF" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select all that apply"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search symptoms"
        android:inputType="text"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/edit_text" />

    <ListView
        android:id="@+id/symptomListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="multipleChoice"
        android:layout_marginTop="12dp"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/holo_blue_light" />

    <Button
        android:id="@+id/btnProceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THAT'S ALL"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/blue"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>
